using System;
using System.Drawing;
using System.Windows.Forms;
using AForge.Video;
using AForge.Video.DirectShow;
using ZXing;

namespace QRScannerApp
{
    public partial class Form1 : Form
    {
        private FilterInfoCollection videoDevices;
        private VideoCaptureDevice videoSource;
        private BarcodeReader reader = new BarcodeReader();

        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            // ðŸ”¹ Load available cameras into ComboBox
            videoDevices = new FilterInfoCollection(FilterCategory.VideoInputDevice);
            comboBoxCameras.Items.Clear();

            if (videoDevices.Count == 0)
            {
                comboBoxCameras.Items.Add("No camera found");
                comboBoxCameras.Enabled = false;
                btnStart.Enabled = false;
            }
            else
            {
                foreach (FilterInfo device in videoDevices)
                {
                    comboBoxCameras.Items.Add(device.Name);
                }
                comboBoxCameras.SelectedIndex = 0; // Select first camera by default
            }
        }

        private void btnStart_Click(object sender, EventArgs e)
        {
            if (videoDevices == null || videoDevices.Count == 0)
            {
                MessageBox.Show("No camera available.");
                return;
            }

            if (comboBoxCameras.SelectedIndex < 0)
            {
                MessageBox.Show("Please select a camera first.");
                return;
            }

            // ðŸ”¹ Start selected camera
            videoSource = new VideoCaptureDevice(videoDevices[comboBoxCameras.SelectedIndex].MonikerString);
            videoSource.NewFrame += VideoSource_NewFrame;
            videoSource.Start();
        }

        private void btnStop_Click(object sender, EventArgs e)
        {
            StopCamera();
        }

        private void VideoSource_NewFrame(object sender, NewFrameEventArgs eventArgs)
        {
            Bitmap frame = (Bitmap)eventArgs.Frame.Clone();

            try
            {
                // Flip horizontally to fix mirrored preview
                frame.RotateFlip(RotateFlipType.RotateNoneFlipX);

                // Display camera preview
                pictureBoxPreview.Image = (Bitmap)frame.Clone();

                // Try to decode QR automatically
                var result = reader.Decode(frame);
                if (result != null)
                {
                    txtResult.Invoke((MethodInvoker)delegate
                    {
                        txtResult.Text = result.Text;
                    });
                }
            }
            catch { }
            finally
            {
                frame.Dispose();
            }
        }

        private void StopCamera()
        {
            if (videoSource != null && videoSource.IsRunning)
            {
                videoSource.SignalToStop();
                videoSource.WaitForStop();
                videoSource = null;
            }
        }

        private void Form1_FormClosing(object sender, FormClosingEventArgs e)
        {
            StopCamera();
        }
    }
}
